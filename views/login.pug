extends layout

block content
    h1 #{title}
    form(method='POST',action='/login/init')
        #form-group
            label Username:
            input.form-control(name = 'username', type = 'text')
        #form-group
            label Password:
            input.form-control(name = 'password', type = 'password')
        br
        input.btn.btn-primary(type='submit',value='Login')