extends layout_sub

block content
    h1 #{title}
    
    img(src=torneo.url_to_image)

    ul
      li
        a(href='/tournament/edit/' + torneo.id) Editar torneo
      li
        form(method='POST',action='/tournament/' + torneo.id + '?_method=DELETE')
          input.btn.btn-primary(type='submit',value='Eliminar')
      li
        form(method='POST',action='/tournament/' + torneo.id + '/inscription')
          input.btn.btn-primary(type='submit',value='Inscribirse')          

    p #{torneo.name}

    p #{torneo.description}

    p Fecha de inicio: #{torneo.first_day}

    p Fecha de fin: #{torneo.last_day}

    p NÃºmero de equipos: #{torneo.max_teams}